<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <TextView
        android:id="@+id/tv_hdc_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/tedure"
        android:gravity="center"
        android:text="TextView"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dc_2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/tedure"
        android:gravity="center"
        android:text="TextView"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/tv_hdc_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dc_3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/tedure"
        android:gravity="center"
        android:text="TextView"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/tv_dc_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dc_4"
        android:layout_width="165dp"
        android:layout_height="100dp"
        android:background="@drawable/tedure"
        android:gravity="center"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/tv_dc_3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBJ_IN_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#B1B1B1"
        android:drawableBottom="@drawable/baseline_boy_50"
        app:icon="@drawable/baseline_boy_50"
        app:iconTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/tv_dc_3"
        app:layout_constraintTop_toTopOf="@+id/tv_dc_4" />
</androidx.constraintlayout.widget.ConstraintLayout>